<h1>Jobs</h1>

<table id="job_list" class="table table-hover table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Company</th>
      <th>Posted On</th>
      <th ></th>
    </tr>
  </thead>

  <tbody>
    <%if @jobs.present?%>
      <% @jobs.each do |job| %>
        <tr>
          <td><%= job.title %></td>
          <td><%= job.description %></td>
          <td><%= job.organization.name %></td>
          <td><%= job.created %></td>
          <td><%= link_to 'Apply', "/apply_job/#{job.id}" %></td>
        </tr>
      <% end %>
    <%end%>
  </tbody>
</table>

<br>
<script type="text/javascript">
  $(document).ready(function() {
    $('#job_list').DataTable();
  } );
</script>