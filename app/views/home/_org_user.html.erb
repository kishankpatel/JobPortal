<h1>Jobs</h1>
<%= link_to 'New Job', new_job_path, :class => "btn btn-success" %>
<br><br>
<table id="job_list" class="table table-hover table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Company</th>
      <th>Applied Count</th>
      <th>Posted On</th>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <%if @jobs.present?%>
      <% @jobs.each do |job| %>
        <tr>
          <td><%= job.title %></td>
          <td><%= job.description %></td>
          <td><%= job.organization.name %></td>
          <td><%= job.candidates.count %></td>
          <td><%= job.created %></td>
          <td><%= job.is_approve ? "Approved" : "Unapproved" %></td>
          <td><%= link_to 'Show', job %></td>
          <td><%= link_to 'Edit', edit_job_path(job) %></td>
          <td><%= link_to 'Destroy', job, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    <%end%>
  </tbody>
</table>
<br>
<script type="text/javascript">
  $(document).ready(function() {
    $('#job_list').DataTable();
  } );
</script>