<div class="apply_job_page">
	<div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
		<div class="job_details">
			<div class="job_th">Title:</div>
			<div class="job_td"><%= @job.title %></div>
			
			<div class="job_th">Description:</div>
			<div class="job_td"><%= @job.description %></div>

			<div class="job_th">Company:</div>
			<div class="job_td"><%= @job.organization.name %></div>
			
			<div class="job_th">Posted On:</div>
			<div class="job_td"><%= @job.created %></div>
		</div>
	</div>

	<div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
		<div class="login-form">
		  <%= form_for(@candidate, url: "/candidate/create") do |f| %>
		    <h2 class="text-center">Apply Job</h2>   
		    <div class="form-group">
		      <div class="input-group">
		          <span class="input-group-addon"><i class="fa fa-user"></i></span>
		          <%= f.text_field :name, autofocus: true, autocomplete: "email", class: "form-control", required: true, placeholder:"Name" %> 
		          <input type="hidden" name="job_id" value="<%=@job.id%>">   
		        </div>
		    </div>
		    <div class="form-group">
		      <div class="input-group">
		          <span class="input-group-addon"><i class="fa fa-user"></i></span>
		          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", required: true, placeholder:"Email" %>    
		        </div>
		    </div>
		        
		    <div class="form-group">
		      <%= f.submit "Apply Now", :class => "btn btn-primary login-btn btn-block" %>
		    </div>
		    <div class="clearfix"></div>
		  <% end %>
		</div>	
	</div>
	<div class="cb"></div>	
</div>
