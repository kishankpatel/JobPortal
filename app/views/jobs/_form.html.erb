<div class="login-form">
  <%= form_with(model: job, local: true) do |f| %>
    <h2 class="text-center"><%=job.new_record? ? "Post Job" : "Update Job"%></h2>   
    <% if job.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(job.errors.count, "error") %> prohibited this job from being saved:</h2>

        <ul>
          <% job.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <%end%>
    <div class="form-group">
      <div class="input-group">
        <span class="input-group-addon"><i class="fa fa-user"></i></span>
        <%= f.text_field :title, autofocus: true, autocomplete: "email", class: "form-control", required: true, placeholder:"Title" %>    
      </div>
    </div>
    <div class="form-group">
      <div class="input-group">
        <span class="input-group-addon"><i class="fa fa-user"></i></span>
        <%= f.text_area :description, autofocus: true, autocomplete: "email", class: "form-control", required: true, placeholder:"Description" %>    
      </div>
    </div>
          
    <div class="form-group">
      <%= f.submit "Post Job", :class => "btn btn-primary login-btn btn-block" %>
    </div>
    <div class="clearfix"></div>
  <% end %>

</div>